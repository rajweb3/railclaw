# ===========================================
# Railclaw Environment Variables
# Copy to .env and fill in real values
# ===========================================

# --- Telegram Bot Tokens (from @BotFather) ---
TELEGRAM_BOT_TOKEN_OWNER=your-owner-bot-token-here
TELEGRAM_BOT_TOKEN_PRODUCT=your-product-bot-token-here

# --- Anthropic API Key (for Claude) ---
ANTHROPIC_API_KEY=sk-ant-your-key-here

# --- AWS (for SES email) ---
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
SES_FROM_EMAIL=noreply@yourdomain.com

# --- Wallet Encryption ---
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WALLET_ENCRYPTION_KEY=your-64-char-hex-key-here

# --- Blockchain RPCs ---
# Use your own Alchemy/Infura/QuickNode endpoints for production
RPC_POLYGON=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_ARBITRUM=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_ETHEREUM=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_OPTIMISM=https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_BASE=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_AVALANCHE=https://avax-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_BSC=https://bsc-dataseed.binance.org
RPC_SOLANA=https://api.mainnet-beta.solana.com

# --- Payment Links ---
PAYMENT_LINK_BASE_URL=https://pay.yourdomain.com
PAYMENT_EXPIRY_HOURS=24

# --- Transaction Monitoring ---
TX_POLL_INTERVAL_MS=15000
TX_REQUIRED_CONFIRMATIONS=20
TX_MONITOR_TIMEOUT_MS=3600000
