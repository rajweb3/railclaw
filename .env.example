# ===========================================
# Railclaw Environment Variables
# Copy to .env and fill in real values
# ===========================================

# --- Telegram Bot Tokens (from @BotFather) ---
TELEGRAM_BOT_TOKEN_OWNER=your_owner_bot_token
TELEGRAM_BOT_TOKEN_PRODUCT=your_product_bot_token

# --- Anthropic API Key ---
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here

# --- Wallet Encryption ---
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WALLET_ENCRYPTION_KEY=your_32_byte_hex_key

# --- Blockchain RPCs ---
RPC_POLYGON=https://polygon-mainnet.g.alchemy.com/v2/your_key
RPC_ARBITRUM=https://arb-mainnet.g.alchemy.com/v2/your_key
RPC_SOLANA=https://api.mainnet-beta.solana.com

# --- Solana Bridge (Across Protocol) ---
# Private key of the Solana wallet that funds SOL for deposit account rent
SOLANA_SOL_DISPENSER_KEY=

# --- Payment Links ---
PAYMENT_LINK_BASE_URL=http://your_ec2_ip:3000
PAYMENT_EXPIRY_HOURS=24

# --- Transaction Monitoring ---
TX_POLL_INTERVAL_MS=15000
TX_REQUIRED_CONFIRMATIONS=20
TX_MONITOR_TIMEOUT_MS=3600000

# --- Telegram Notifications ---
# Chat ID of the business owner who receives payment confirmations
TELEGRAM_OWNER_CHAT_ID=your_telegram_chat_id
